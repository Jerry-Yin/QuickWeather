<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:paddingBottom="60dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tv_temp1_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="23/12"
            android:textColor="#454545"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_temp1_temp2"
            android:paddingLeft="2dp"
            android:text="o"
            android:textColor="#87CEEB"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_weather_desp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_temp1_temp2"
            android:gravity="center"
            android:text="小雨转中雨"
            android:layout_marginLeft="5dp"
            android:textColor="#EE6A50"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_weather_desp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_local"
            android:text="杭州"
            android:textColor="#87CEEB"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/img_local"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv_weather_desp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/img_local" />

        <ImageView
            android:id="@+id/img_weather"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_o"
            android:src="@drawable/image2" />

        <TextView
            android:id="@+id/tv_current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35sp"
            android:gravity="center"
            android:layout_toRightOf="@id/img_weather"
            android:text="8/21"
            android:textColor="#87CEFF"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_current_weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tv_current_date"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_weather"
            android:paddingTop="10dp"
            android:text="星期五"
            android:gravity="center"
            android:textColor="#87CEEB"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>